---
import Image from 'astro/components/Image.astro';
import myImage from './public/banner.svg';
import profileimg from './public/profile.jpeg';

---
<div class="relative w-full mx-auto lg:max-w-4xl md:max-w-2xl md:pt-10 px-4">
    <!-- Imagen Principal (Banner) -->
    <Image
      src={myImage}
      alt="lofi anime"
      class="rounded-md object-cover w-full h-48 sm:h-64 md:h-72 lg:h-80"
    />
  
    <!-- Imagen de Perfil Superpuesta a la Izquierda -->
    <div class="absolute bottom-0 left-4 sm:left-8 md:left-12 translate-y-1/2">
      <Image
        src={profileimg}
        alt="perfil the personal"
        class="rounded-full size-20 sm:size-24 md:size-28 lg:size-24 object-cover border-4 border-white shadow-md"
      />
    </div>
  </div>
  